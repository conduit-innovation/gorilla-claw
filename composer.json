{
    "name": "conduit-innovation/monkey-hook",
    "description": "Coherent WordPress action / filter hook API, with monkey-patching capabilities.",
    "keywords": ["wordpress", "composer", "filter", "action", "hook"],
    "license": "MIT",
    "authors": [
        {
            "name": "Tom Lawton",
            "email": "tom.lawton@cndu.it"
        }
    ],
    "type": "library",
    "require": {
		"php": ">=8.1"
    },
    "require-dev": {
		"phpunit/phpunit": "10.*",
        "php-stubs/wordpress-stubs": "^6.2",
        "php-mock/php-mock-mockery": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "MonkeyHook\\": "src/class"
        },
        "files": ["src/inc/API.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "MonkeyHook\\Tests\\": "tests/"  ,
            "MonkeyHook\\Types\\": "tests/types/",
            "MonkeyHook\\Mock\\": "tests/mock/"            
        },
        "files": ["tests/mock/wordpress/plugin.php", "src/inc/API.php"]
    },
    "scripts": {
        "test": "./vendor/bin/phpunit"
    }	
}
